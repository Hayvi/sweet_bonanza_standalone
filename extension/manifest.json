{
  "manifest_version": 3,
  "name": "MelBet Game Integrator",
  "version": "1.0",
  "description": "Integrates Virtual Wallet balance into game UI natively.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "pragmatic_specific.js",
        "content.js"
      ],
      "all_frames": true,
      "run_at": "document_start",
      "world": "MAIN"
    }
  ]
}